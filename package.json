{
  "name": "common-git-hooks",
  "version": "1.0.0",
  "description": "A GIT hooks CLI collection to integrate with your projects.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "format": "prettier --write --cache .",
    "nodeTS": "node -r ts-node/register --loader ts-node/esm --no-warnings --watch",
    "nodeTS:debug": "pnpm nodeTS --inspect-brk",
    "ts:check": "tsc --noEmit",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path . && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albannurkollari/common-git-hooks.git"
  },
  "keywords": [
    "GIT",
    "hooks",
    "typescript",
    "javascript",
    "CLI"
  ],
  "author": "Alban Nurkollari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albannurkollari/common-git-hooks/issues"
  },
  "homepage": "https://github.com/albannurkollari/common-git-hooks#readme",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "picocolors": "^1.0.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "*"
      ],
      "allowAny": [
        "*"
      ]
    }
  }
}
